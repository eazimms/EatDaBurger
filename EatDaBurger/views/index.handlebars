<div class="jumbotron" id="MainHeader">
  <h1>Eat Da Burger</h1>
  <h2>Make and eat burgers</h2>
  <img class="image" src={{"../public/assets/img/burger.jpeg"}}>
  <form class="create-form">
    <div class="form-group">
      <label for="newBurger">New Burger!</label>
      <input type="text" id="burger" name="name">
      <button type="submit">Add da burger</button>
    </div>
  </form>
</div>
<div class="row">
  <div class="container col-lg-6">
    <h2>Burgers</h2>
    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{>burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}

    </ul>
  </div>
  <div class="container col-lg-6">
    <h2>Burgers devoured!</h2>
    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{>burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>